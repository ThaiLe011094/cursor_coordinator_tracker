{
  "manifest_version": 3,
  "name": "Cursor Coordinate Tracker",
  "version": "1.1",
  "description": "Displays cursor coordinates on the webpage.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "src/address.png"
  }
}
